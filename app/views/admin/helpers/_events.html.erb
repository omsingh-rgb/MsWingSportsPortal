<% Event.all.order(:max_age).each do |e| %>


  <% if @number_registered == @max_allowed %>
    <% @sub_style = 'style=color:green' %>
  <% else %>
    <% @sub_style = 'style=color:orange' %>
  <% end %>
  <div class="column is-narrow">
    <!--div class="block container is-fluid"-->
    <div class="card ">
      <div class="card-content">
        <p class="title">
          <%= e.name %>
        </p>
      </div>
      <footer class="card-footer">
        <p class="card-footer-item">
          <a href="/admin-event-view/<%= e.id %>">View</a>
        </p>
        <p class="card-footer-item">
      <span>
        <a href="/admin-event-edit/<%= e.id %>">Edit</a>
      </span>
        </p>
      </footer>
    </div>
  </div>

<% end %>